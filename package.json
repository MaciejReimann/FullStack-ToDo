  },
  "bugs": {
    "url": "https://github.com/MaciejReimann/FullstackTodo/issues"
  },
  "homepage": "https://github.com/MaciejReimann/FullstackTodo#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.3.13"
  }
